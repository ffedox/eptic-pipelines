</text>
<text id="2382" date="2011-02-15" length="short" lengthw="153" duration="short" durations="100.0" speed="slow" speedwm="91.8" delivery="impromptu" topic="Transport" topicspec="Explanations of vote" type="Italian spoken sources" comments="NA">
