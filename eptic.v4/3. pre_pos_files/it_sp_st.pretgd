<text id="2370" date="2011-02-02" length="short" lengthw="180" duration="short" durations="110.0" speed="slow" speedwm="98.2" delivery="impromptu" topic="Politics" topicspec="Referendum on the future status of Southern Sudan" type="Italian spoken sources" comments="NA">
