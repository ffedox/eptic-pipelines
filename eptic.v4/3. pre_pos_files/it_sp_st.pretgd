<text id="39" date="2011-01-18" length="long" lengthw="52" duration="short" durations="25.0" speed="slow" speedwm="124.8" delivery="impromptu" topic="Society and Culture" topicspec="Order of business" type="Italian spoken sources" comments="NA">
