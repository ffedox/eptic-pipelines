<text id="509" date="2011-04-06" length="short" lengthw="174" duration="short" durations="55.0" speed="high" speedwm="189.8" delivery="impromptu" topic="Economics and Finance" topicspec="Explanations of vote" type="French spoken sources" comments="NA">
